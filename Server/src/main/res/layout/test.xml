<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_browser"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_terrain_black_24dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />

    <EditText
        android:id="@+id/edt_listing_name"
        android:hint="name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_listing_price"
        android:hint="price"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edt_listing_descriptions"
        android:hint="description"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="90dp" />
    <EditText
        android:id="@+id/edt_more_descriptions"
        android:hint="More descriptions"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <EditText
        android:id="@+id/edt_itinerary"
        android:hint="Itenerary"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="90dp" />
    <EditText
        android:id="@+id/edt_listing_package1"
        android:hint="package 1"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <EditText
        android:id="@+id/edt_listing_package2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:hint="package 2"
        android:inputType="text" />





</LinearLayout>