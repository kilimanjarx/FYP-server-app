<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ShowOrderActivity">





    <android.support.v7.widget.RecyclerView
        android:layout_margin="8dp"
        android:id="@+id/recycler_show_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/holo_blue_bright"
        app:menu="@menu/show_order_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.design.widget.BottomNavigationView>


</RelativeLayout>